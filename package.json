{
  "name": "tamalebot",
  "version": "0.1.0",
  "description": "Security-first AI agent platform. Isolated agents, any cloud, full audit trail.",
  "type": "module",
  "license": "Apache-2.0",
  "bin": {
    "tamalebot": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "start": "node dist/cli/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "docker:build": "docker build -t tamalebot-agent -f docker/Dockerfile .",
    "docker:run": "docker run --rm -it tamalebot-agent"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.77.0",
    "chalk": "^5.4.1",
    "openai": "^6.22.0",
    "commander": "^13.1.0",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "pino": "^9.6.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.0",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
